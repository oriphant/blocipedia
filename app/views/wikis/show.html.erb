<h1><%= markdown_to_html @wiki.title%></h1>

<div class = "row">
  
  <div class="col-md-8">
    <p><%= markdown_to_html @wiki.body%></p>
  </div>

  <div class="col-md-4">
    
    <% if policy(@wiki).edit? %>
      <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success pull-right edit-btn' %>
    <% end %>
    
    <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger pull-right', data: {confirm: 'Are you sure you want to delete this Wiki?'} %>
    <% end %>
  </div>
  

</div>