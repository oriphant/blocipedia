<%= form_for @wiki do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: "Enter Wiki title" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter Wiki body" %>
  </div>
  
  <% if current_user.role == 'admin' || (current_user.role == 'premium' && current_user.id == wiki.user_id)%>
  <div class="form-group pull-right text-danger">
    <%= f.label :private, class: 'checkbox' do %>
    <%= f.check_box :private %> Private Wiki
    <% end %>
  </div>
  <% end %>
  
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<%end%>


